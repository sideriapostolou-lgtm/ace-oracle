generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  tier          String       @default("free") // free, pro, elite
  stripeId      String?
  predictions   Prediction[]
  picks         Pick[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Player {
  id         String   @id @default(cuid())
  name       String
  country    String
  ranking    Int
  points     Int      @default(0)
  tour       String   // ATP, WTA
  age        Int?
  height     String?
  plays      String?  // Right-handed, Left-handed
  surfaceWin String?  // JSON: { hard: 0.65, clay: 0.58, grass: 0.72 }
  imageUrl   String?
  wonLost    String?  // e.g., "45-12"
  titles     Int      @default(0)
  matchesP1  Match[]  @relation("Player1")
  matchesP2  Match[]  @relation("Player2")
  matchesW   Match[]  @relation("Winner")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Match {
  id          String       @id @default(cuid())
  tournament  String
  round       String       // R128, R64, R32, R16, QF, SF, F
  surface     String       // Hard, Clay, Grass, Carpet
  court       String?      // Indoor, Outdoor
  player1Id   String
  player2Id   String
  winnerId    String?
  score       String?      // e.g., "6-4 3-6 7-5"
  status      String       @default("upcoming") // upcoming, live, completed
  startTime   DateTime
  tour        String       // ATP, WTA, Grand Slam
  player1     Player       @relation("Player1", fields: [player1Id], references: [id])
  player2     Player       @relation("Player2", fields: [player2Id], references: [id])
  winner      Player?      @relation("Winner", fields: [winnerId], references: [id])
  predictions Prediction[]
  picks       Pick[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Prediction {
  id              String   @id @default(cuid())
  userId          String
  matchId         String
  predictedWinner String   // player ID
  confidence      Float    // 0-100
  reasoning       String?
  result          String?  // correct, incorrect, pending
  points          Int      @default(0)
  user            User     @relation(fields: [userId], references: [id])
  match           Match    @relation(fields: [matchId], references: [id])
  createdAt       DateTime @default(now())

  @@unique([userId, matchId])
}

model Pick {
  id            String   @id @default(cuid())
  userId        String
  matchId       String
  pickedPlayerId String  // player ID the user picked to win
  result        String   @default("pending") // pending, correct, incorrect
  user          User     @relation(fields: [userId], references: [id])
  match         Match    @relation(fields: [matchId], references: [id])
  createdAt     DateTime @default(now())

  @@unique([userId, matchId])
}

model PredictionRecord {
  id        String   @id @default(cuid())
  season    String   // e.g., "2026"
  wins      Int      @default(0)
  losses    Int      @default(0)
  pushes    Int      @default(0)
  streak    Int      @default(0)  // current win streak (negative for loss streak)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([season])
}

model AccessCode {
  id        String   @id @default(cuid())
  code      String   @unique
  active    Boolean  @default(true)
  usedCount Int      @default(0)
  createdAt DateTime @default(now())
}
