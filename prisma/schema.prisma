generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  tier          String       @default("free")
  stripeId      String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  accounts      Account[]
  picks         Pick[]
  predictions   Prediction[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Player {
  id         String   @id @default(cuid())
  name       String
  country    String
  ranking    Int
  points     Int      @default(0)
  tour       String
  age        Int?
  height     String?
  plays      String?
  surfaceWin String?
  imageUrl   String?
  wonLost    String?
  titles     Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  matchesW   Match[]  @relation("Winner")
  matchesP2  Match[]  @relation("Player2")
  matchesP1  Match[]  @relation("Player1")
}

model Match {
  id          String       @id @default(cuid())
  tournament  String
  round       String
  surface     String
  court       String?
  player1Id   String
  player2Id   String
  winnerId    String?
  score       String?
  status      String       @default("upcoming")
  startTime   DateTime
  tour        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  winner      Player?      @relation("Winner", fields: [winnerId], references: [id])
  player2     Player       @relation("Player2", fields: [player2Id], references: [id])
  player1     Player       @relation("Player1", fields: [player1Id], references: [id])
  picks       Pick[]
  predictions Prediction[]
}

model Prediction {
  id              String   @id @default(cuid())
  userId          String
  matchId         String
  predictedWinner String
  confidence      Float
  reasoning       String?
  result          String?
  points          Int      @default(0)
  createdAt       DateTime @default(now())
  match           Match    @relation(fields: [matchId], references: [id])
  user            User     @relation(fields: [userId], references: [id])

  @@unique([userId, matchId])
}

model Pick {
  id             String   @id @default(cuid())
  userId         String
  matchId        String
  pickedPlayerId String
  result         String   @default("pending")
  createdAt      DateTime @default(now())
  match          Match    @relation(fields: [matchId], references: [id])
  user           User     @relation(fields: [userId], references: [id])

  @@unique([userId, matchId])
}

model PredictionRecord {
  id        String   @id @default(cuid())
  season    String   @unique
  wins      Int      @default(0)
  losses    Int      @default(0)
  pushes    Int      @default(0)
  streak    Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model AccessCode {
  id        String   @id @default(cuid())
  code      String   @unique
  active    Boolean  @default(true)
  usedCount Int      @default(0)
  createdAt DateTime @default(now())
}
